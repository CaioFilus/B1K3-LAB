<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMargin="48dp"
            app:expandedTitleMarginEnd="64dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/imgViewMap"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:transitionName="@string/transition_route"
                app:layout_collapseMode="parallax" />

        </android.support.design.widget.CollapsingToolbarLayout>


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/sub_title_margin"
                        android:text="Data:"
                        android:textColor="@color/subtitle"
                        android:textSize="@dimen/sub_title_size" />

                    <TextView
                        android:id="@+id/textViewDateInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/info_margin"
                        android:background="@drawable/info_card"
                        android:textColor="@color/textInfo"
                        android:textSize="@dimen/info_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/sub_title_margin"
                        android:text="Horario:"
                        android:textColor="@color/subtitle"
                        android:textSize="@dimen/sub_title_size" />

                    <TextView
                        android:id="@+id/textViewScheduleInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/info_margin"
                        android:background="@drawable/info_card"
                        android:textColor="@color/textInfo"
                        android:textSize="@dimen/info_size" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/sub_title_margin"
                        android:text="Tempo:"
                        android:textColor="@color/subtitle"
                        android:textSize="@dimen/sub_title_size" />

                    <TextView
                        android:id="@+id/textViewTimeInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/info_margin"
                        android:background="@drawable/info_card"
                        android:textColor="@color/textInfo"
                        android:textSize="@dimen/info_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/sub_title_margin"
                        android:text="Distância:"
                        android:textColor="@color/subtitle"
                        android:textSize="@dimen/sub_title_size" />

                    <TextView
                        android:id="@+id/textViewDisInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/info_margin"
                        android:background="@drawable/info_card"
                        android:textColor="@color/textInfo"
                        android:textSize="@dimen/info_size" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/sub_title_margin"
                        android:text="Velocidade Máxima:"
                        android:textColor="@color/subtitle"
                        android:textSize="@dimen/sub_title_size" />

                    <TextView
                        android:id="@+id/textViewMaxSpdInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/info_margin"
                        android:background="@drawable/info_card"
                        android:textColor="@color/textInfo"
                        android:textSize="@dimen/info_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/sub_title_margin"
                        android:text="Velocidade Média"
                        android:textColor="@color/subtitle"
                        android:textSize="@dimen/sub_title_size" />

                    <TextView
                        android:id="@+id/textViewAvarageSpd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/info_margin"
                        android:background="@drawable/info_card"
                        android:textColor="@color/textInfo"
                        android:textSize="@dimen/info_size" />

                </LinearLayout>
            </LinearLayout>


            <com.jjoe64.graphview.GraphView
                android:id="@+id/graphView"
                android:layout_width="match_parent"
                android:layout_height="200dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>