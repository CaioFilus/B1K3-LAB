<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/info_layout_margin"
        android:layout_marginStart="@dimen/info_layout_margin"
        android:layout_marginTop="@dimen/info_layout_margin"
        android:columnCount="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data:"
                android:theme="@style/TextViewLeft" />

            <TextView
                android:id="@+id/textViewDateInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_calendar"
                android:text="13/01/1997"
                android:theme="@style/InfoTextViewLeft" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horario:"
                android:theme="@style/TextViewRight" />

            <TextView
                android:id="@+id/textViewScheduleInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_clock"
                android:text="15:26:12"
                android:theme="@style/InfoTextViewRight" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tempo:"
                android:theme="@style/TextViewLeft" />

            <TextView
                android:id="@+id/textViewTimeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_stopwatch"
                android:text="13:03"
                android:theme="@style/InfoTextViewLeft" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distância:"
                android:theme="@style/TextViewRight" />

            <TextView
                android:id="@+id/textViewDisInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_road"
                android:text="1000m"
                android:theme="@style/InfoTextViewRight" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Velocidade Máxima:"
                android:theme="@style/TextViewLeft" />

            <TextView
                android:id="@+id/textViewMaxSpdInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_max_speed"
                android:text="34,56 Km/H"
                android:theme="@style/InfoTextViewLeft" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Velocidade Média"
                android:theme="@style/TextViewRight" />

            <TextView
                android:id="@+id/textViewAvarageSpd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_average_speed"
                android:text="20 Km/H"
                android:theme="@style/InfoTextViewRight" />

        </LinearLayout>
    </GridLayout>


    <com.jjoe64.graphview.GraphView
        android:id="@+id/graphView"
        android:layout_width="match_parent"
        android:layout_height="200dp" />
</LinearLayout>
