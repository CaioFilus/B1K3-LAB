<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <eu.long1.spacetablayout.SpaceTabLayout
            android:id="@+id/spaceTabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:button_color="@color/yellowNpDeas"
            app:icon_one="@mipmap/icon_map"
            app:icon_two="@mipmap/icon_sensor"
            app:icon_three="@mipmap/icon_graph"
            app:text_one="@string/tab_map"
            app:text_two="@string/tab_sensor"
            app:text_three="@string/tab_graph"
            app:layout_behavior="eu.long1.spacetablayout.SpaceTabLayoutBehavior"
            app:number_of_tabs="three"
            app:starting_position="one"
            app:tab_color="@color/blueNpDeas"
            app:text_color="#61FFFFFF" />
    </android.support.design.widget.CoordinatorLayout>


    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/fabStartRoute"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="80dp"
            android:layout_marginHorizontal="@dimen/fab_margin"
            android:background="@drawable/button_shape"
            android:text="Inciar"
            android:textColor="#fff"
            android:textSize="25sp" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/fab_modal_margin"
            android:layout_marginBottom="80dp"
            app:backgroundTint="@color/fabColor"
            app:borderWidth="4dp"
            app:srcCompat="@drawable/ic_corpo" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/fab_modal_margin"
            android:layout_marginBottom="80dp"
            app:backgroundTint="@color/fabColor"
            app:borderWidth="4dp"
            app:srcCompat="@mipmap/icon_bike" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/fab_modal_margin"
            android:layout_marginBottom="80dp"
            app:backgroundTint="@color/fabColor"
            app:borderWidth="4dp"
            app:srcCompat="@drawable/ic_carro" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/fab_modal_margin"
            android:layout_marginBottom="80dp"
            app:backgroundTint="@color/fabColor"
            app:borderWidth="4dp"
            app:srcCompat="@drawable/ic_bus" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabModal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/fab_modal_margin"
            android:layout_marginBottom="80dp"
            app:backgroundTint="@color/fabColor"
            app:borderWidth="4dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_bike"
            app:useCompatPadding="true" />


    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/info_color"
        app:itemTextColor="@android:color/white"
        app:menu="@menu/nav_menu" />

</android.support.v4.widget.DrawerLayout>