<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blueNpDeas</item>
        <item name="colorPrimaryDark">@color/greenNpDeas</item>
        <item name="colorAccent">@color/redNpDeas</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
        <item name="android:fontFamily">@font/laconic_light</item>
        <item name="cardViewStyle">@style/CardView.Light</item>
        <item name="android:statusBarColor">@color/greenLightNpDeas</item>
    </style>

    <style name="PopupTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="TextViewLeft" parent="android:Theme.Light">
        <item name="android:layout_gravity">right</item>
        <item name="android:textSize">@dimen/sub_title_size</item>
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="TextViewRight" parent="android:Theme.Light">
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">@color/subtitle</item>
        <item name="android:textSize">@dimen/sub_title_size</item>
    </style>

    <style name="InfoTextViewLeft" parent="@style/TextViewLeft">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/blackTransparent</item>
        <item name="android:textSize">@dimen/info_size</item>
    </style>

    <style name="InfoTextViewRight" parent="@style/TextViewRight">
        <item name="android:textColor">@color/blackTransparent</item>
        <item name="android:textSize">@dimen/info_size</item>
    </style>


    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBar">true</item>
        <item name="colorPrimaryDark">@color/blueLightNpDeas</item>
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@android:color/white</item>

        <!-- Additionally if you want animations when dialog opening -->
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>


</resources>
