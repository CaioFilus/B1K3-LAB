<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/bluePressed"
                android:startColor="@color/bluePressed"/>
            <stroke android:color="@color/blueGradient" android:width="3dp"/>
            <corners android:radius="5dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:endColor="@color/bluePressed"
                android:startColor="@color/bluePressed"/>
            <corners android:radius="5dp"/>
            <stroke android:color="@color/blueGradient" android:width="3dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="-9090" android:endColor="@color/blueGradient"
                android:startColor="@color/blueGradient"/>
            <corners android:radius="5dp"/>
            <!--<stroke android:color="@color/greenNpDeas" android:width="3dp"/>-->
        </shape>
    </item>
</selector>